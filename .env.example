# =============================================================================
# DataExtract RAG - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your API keys
# Get your FREE API keys from:
# - Groq: https://console.groq.com
# - Cohere: https://dashboard.cohere.com

# =============================================================================
# CLOUD API KEYS
# =============================================================================

# Groq API (for LLM and Whisper transcription)
# FREE: 14,400 requests/day
GROQ_API_KEY=your_groq_api_key_here

# Cohere API (for embeddings)
# FREE: 1000 requests/min
COHERE_API_KEY=your_cohere_api_key_here

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=YourApp
MONGODB_DB_NAME=multimodal_rag

# =============================================================================
# CLOUD PROCESSING TOGGLES
# =============================================================================
# Set to false to use local Ollama/Whisper instead

USE_CLOUD_LLM=true
USE_CLOUD_WHISPER=true
USE_CLOUD_EMBEDDINGS=true

# =============================================================================
# CLOUDINARY (Optional - for cloud file storage)
# =============================================================================
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret
# USE_CLOUDINARY=false
